CXX=@CXX@
CXXFLAGS=@CXXFLAGS@
CPPFLAGS=@DEFS@ @CPPFLAGS@
FC=@FC@
FCFLAGS=@FCFLAGS@

VPATH = @srcdir@

.PHONY: default
ifeq ($(FC),)
default: ppidd_ctest.exe
else
default: ppidd_test.exe ppidd_sf_test.exe ppidd_ctest.exe
endif

ppidd_ctest.exe: ppidd_ctest.cpp
	$(CXX) $(CPPFLAGS) -I ../src $(CXXFLAGS) -o $@ $< -L.. -lppidd $(LIBS)

ppidd_test.exe: ppidd_test.f90
	$(FC) -I ../src $(FCFLAGS) -o $@ $< -L.. -lppidd $(LIBS)

ppidd_sf_test.exe: ppidd_sf_test.f90
	$(FC) -I ../src $(FCFLAGS) -o $@ $< -L.. -lppidd $(LIBS)
